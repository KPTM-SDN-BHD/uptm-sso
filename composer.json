{
    "name": "uptm/sso",
    "description": "KPTM SSO Client - Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MUHAMMAD TARMIZI SANUSI AFKAR",
            "email": "realtarmizisanusi@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^7.0|^8.0|^9.0",
        "socialiteproviders/laravelpassport": "^4.3",
        "laravel/socialite": "^4.3"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.8",
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Uptm\\Sso\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Uptm\\Sso\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Uptm\\Sso\\SsoServiceProvider"
            ]
        }
    }
}
